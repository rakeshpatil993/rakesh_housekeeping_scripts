pipeline{
    agent any
   
stages {
            stage('check input parameter'){
            steps{
                      echo "${params.db_server_list}"
                      echo "${params.unix_user_pass}"
                      echo "${params.unix_user}"
                     }
           }
            stage('psql log cleanup') {
              steps {
               sh "for ( db_server in ${params.db_server_list} )
                   do 
               sh "sshpass -p \${params.unix_user_pass} ssh \${params.unix_user}@\${db_server} "bash" < ./postgresql/clean-postgreslog.sh"
                  done"
            }
        }
    }
}
